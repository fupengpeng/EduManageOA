<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:padding="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/order_title_text_size"
                android:layout_marginLeft="@dimen/dp_34"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_dialog_main_change_password_close"

                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35" >
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/order_subheading_text_size"
                android:text="原     密     码："
                android:layout_weight="0.35"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center|left"
                android:id="@+id/et_dialog_main_change_password_old"
                android:inputType="textVisiblePassword"
                android:maxLength="18"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                android:layout_weight="0.7"
                android:hint="请输入原密码"
                android:textSize="@dimen/order_subheading_text_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35" >
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/order_subheading_text_size"
                android:text="新     密     码："
                android:layout_weight="0.35"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_dialog_main_change_password_new"
                android:layout_marginRight="@dimen/dp_10"
                android:inputType="textVisiblePassword"
                android:maxLength="18"
                android:textSize="@dimen/order_subheading_text_size"
                android:background="@null"
                android:hint="请输入新密码"
                android:layout_weight="0.7"
                android:layout_width="@dimen/dp_0"
                android:gravity="center|left"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35" >
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/order_subheading_text_size"
                android:text="确  认  密  码："
                android:layout_weight="0.35"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_dialog_main_change_password_confirm"
                android:layout_marginRight="@dimen/dp_10"
                android:inputType="textVisiblePassword"
                android:textSize="@dimen/order_subheading_text_size"
                android:maxLength="18"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:layout_weight="0.7"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_35" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <Button
            android:id="@+id/btn_dialog_main_change_password_confirm"
            android:textSize="@dimen/order_subheading_text_size"
            android:textColor="@color/white"
            android:text="确认提交"
            android:background="@color/leftMenuWorkNameTextColor"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35" />
    </LinearLayout>


</LinearLayout>